  <%= link_to "Profile", customer_path(current_user) %>
  <%= link_to "Create Ticket", new_ticket_path %>
  <%= link_to "My Repair Ticket"%>
  <%= link_to "Sign Out", destroy_user_session_path, :method => "DELETE" %>
