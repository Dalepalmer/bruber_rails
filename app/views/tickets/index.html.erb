<h1>All Tickets</h1>
<div class="content">
<% if !@tickets == [] %>
<div class="row">
  <h4>My Tickets</h4>
<div class='blue-border'>
</div>
  <% @tickets.each do |ticket| %>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>
          Ticket Number: <%= ticket.id %>
        </th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          Address: <%= ticket.location %> <br>
          Problem: <%= ticket.problem %> <br>
          Location Notes: <%= ticket.location_notes %> <br>
          Status:  <%= ticket.repair_status %> <br>
          User Rating: 5 <br>

          <button>Claim Ticket</button>

        </td>
      </tr>
    </tbody>
  </table>
  <% end %>
</div>
  <% else %>
    <h1> There are no repair tickets yet </h1>
  <% end %>
</div>
